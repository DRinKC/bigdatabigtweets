		  DataFrame taco = sqlContext.sql("SELECT SUBSTRING(createdAt, 12,2) as hour FROM GoodNightTweets WHERE UPPER(text) LIKE UPPER('%taco%')"
		  		+ " OR UPPER(text) LIKE UPPER('%mexican%food') OR UPPER(text) LIKE UPPER('%Chipotle%')");
